{
  "name": "ty3bar",
  "version": "0.0.1",
  "description": "A Typescript based i3 bar status program. Supports long running commands.",
  "main": "build/main.js",
  "author": "Kevin Gravier <kevin@mrkmg.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf build",
    "lint": "tslint --force --format verbose \"src/**/*.ts\" \"test/**/*.ts\" ",
    "pack": "npm run clean && webpack",
    "bin": "npm run pack && echo '#!/usr/bin/env node' > ty3bar && cat build/ty3bar.js >> ty3bar && chmod +x ty3bar"
  },
  "dependencies": {
    "@types/minimist": "^1.1.29",
    "@types/node": "^6.0.45",
    "default-value": "^1.0.0",
    "humanize-duration": "^3.9.1",
    "minimist": "^1.2.0",
    "pad": "^1.0.1",
    "rimraf": "^2.5.4",
    "source-map-support": "^0.4.5",
    "ts-loader": "^0.9.4",
    "ts-node": "^1.4.3",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3",
    "webpack": "^1.13.2",
    "xtend": "^4.0.1"
  }
}
